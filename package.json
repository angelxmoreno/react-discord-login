{
    "name": "react-discord-login",
    "version": "2.1.0",
    "description": "A React component for easy integration of 'Sign in with Discord' functionality into web applications",
    "keywords": [
        "react",
        "discord",
        "authentication",
        "oauth2",
        "login"
    ],
    "main": "dist/index.js",
    "repository": "git@github.com:angelxmoreno/react-discord-login.git",
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "license": "MIT",
    "private": false,
    "contributors": [],
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "clean": "rm -rf node_modules bun.lock && bun install",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "prepublishOnly": "bun run build",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "typecheck": "tsc --noEmit",
        "postinstall": "lefthook install"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.0",
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@types/react": "^18.2.44",
        "@types/web": "^0.0.127",
        "bun-types": "latest",
        "lefthook": "^1.12.3",
        "release-it": "^17.0.1",
        "rimraf": "^5.0.5"
    },
    "peerDependencies": {
        "typescript": "^5.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
